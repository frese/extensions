{
    "$schema": "https://www.raycast.com/schemas/extension.json",
    "name": "aws-profiles",
    "title": "AWS Profiles",
    "description": "Lists AWS profiles, execute a command/script for a chosen profile.",
    "icon": "profile-icon.png",
    "author": "frese",
    "categories": [
        "Developer Tools",
        "Productivity"
    ],
    "license": "MIT",
    "commands": [
        {
            "name": "index",
            "title": "AWS Profiles",
            "subtitle": "open",
            "description": "Execute command for a profile",
            "mode": "view"
        }
    ],
    "preferences": [
        {
            "name": "command",
            "type": "textfield",
            "required": true,
            "title": "Command or script",
            "description": "Command or script to execute for the chosen <profile>",
            "default": "/bin/zsh -l -c \"assume -c <profile>\""
        }
    ],
    "dependencies": {
        "@raycast/api": "^1.45.2",
        "ini": "^3.0.1",
        "read-ini-file": "^4.0.0"
    },
    "devDependencies": {
        "@types/node": "18.8.3",
        "@types/react": "18.0.9",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "prettier": "^2.5.1",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "build": "ray build -e dist",
        "dev": "ray develop",
        "fix-lint": "ray lint --fix",
        "lint": "ray lint",
        "publish": "ray publish"
    }
}
